<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="librus.MainPage" NavigationPage.HasNavigationBar="False">

    <StackLayout BackgroundColor="Black">_subject
        <Label Text="Login" TextColor="White" Padding="10" FontSize="25" HorizontalOptions="CenterAndExpand"></Label>
        <Entry TextColor="White" Margin="10" x:Name="login" ></Entry>
        <Label Text="Haslo:" TextColor="White" Padding="10" FontSize="25" HorizontalOptions="CenterAndExpand" ></Label>
        <Entry TextColor="white" Margin="10" IsPassword="True" x:Name="haslo"></Entry>
        <Button Text="Zaloguj" BackgroundColor="CadetBlue" Padding="10" Margin="10" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>
